@model Mantenimiento_001.Models.maquina

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="form-horizontal cabecera2">

    <h2>Nueva Maquina</h2>
    <p class="pull-right">

        <button class="btn btn-default btn-sm" onclick="location.href='@Url.Action("Maquinaria", "Maquinaria")'">Listado de Maquinas </button>
    </p>
</div>

<div class="panel panel-default">
    <div class="panel-heading">Maquina</div>
    <div class="panel-body">

        @using (Html.BeginForm(null,null,FormMethod.Post,new { id = "maquinaForm"}))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">

                    <div class="col-md-10">
                        <label>Identificador:</label>
                        @Html.EditorFor(model => model.maq_name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.maq_name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="modal-footer">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Maquinaria", "Maquinaria")'">Cancelar </button>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
